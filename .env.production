# BrepFlow Production Environment Configuration

# Application Mode
NODE_ENV=production
BREPFLOW_MODE=production

# Geometry Engine Configuration
ENABLE_MOCK_GEOMETRY=false
REQUIRE_REAL_OCCT=true
OCCT_WASM_PATH=/assets/wasm
OCCT_INIT_TIMEOUT=30000
VALIDATE_GEOMETRY_OUTPUT=true

# Performance & Memory
MAX_WORKER_MEMORY_MB=2048
ENABLE_MEMORY_MONITORING=true
MESH_CACHE_SIZE_MB=512
WORKER_RESTART_THRESHOLD_MB=1800

# Security
ENABLE_CSP=true
REQUIRE_CORS_VALIDATION=true
ALLOWED_ORIGINS=https://brepflow.com,https://app.brepflow.com

# Logging & Monitoring
LOG_LEVEL=error
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=
ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_EXPORT_VALIDATION=true
ENABLE_HEALTH_CHECKS=true
ENABLE_ADMIN_DASHBOARD=false

# Export Settings
MAX_EXPORT_SIZE_MB=100
SUPPORTED_FORMATS=step,iges,stl,obj
REQUIRE_EXPORT_VALIDATION=true