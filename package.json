{
  "name": "brepflow",
  "version": "0.1.0",
  "private": true,
  "description": "Web-first, node-based parametric CAD on exact B-Rep/NURBS",
  "author": "Aureo Labs (a MADFAM company)",
  "license": "MPL-2.0",
  "homepage": "https://brepflow.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/aureolabs/brepflow.git"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.6.7"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:production": "bash scripts/build-production.sh",
    "build:wasm": "bash scripts/build-occt.sh",
    "test": "turbo run test -- --coverage",
    "test:e2e": "playwright test && tsx scripts/check-playwright-results.ts test-results/junit.xml",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm test && pnpm test:e2e",
    "audit:full": "playwright test --config=playwright.audit.config.ts && tsx scripts/check-playwright-results.ts audit-results.xml",
    "audit:functionality": "playwright test --config=playwright.audit.config.ts --project=functionality-audit",
    "audit:accessibility": "playwright test --config=playwright.audit.config.ts --project=accessibility-audit",
    "audit:performance": "playwright test --config=playwright.audit.config.ts --project=performance-audit",
    "audit:report": "tsx scripts/run-complete-audit.ts --report-only",
    "audit:dashboard": "tsx scripts/audit-dashboard.ts",
    "audit:ci": "pnpm audit:full",
    "lint": "turbo run lint",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "coverage:packages": "tsx scripts/generate-package-coverage.ts",
    "coverage:packages:publish": "tsx scripts/generate-package-coverage.ts --publish",
    "lockfile:check": "pnpm install --lockfile-only --frozen-lockfile",
    "lockfile:update": "pnpm install",
    "pre-deploy": "pnpm lockfile:check && pnpm build",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "smoke:cli": "bash scripts/run-cli-smoke.sh"
  },
  "posttest": "pnpm coverage:packages",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@swc/core": "^1.13.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.6.7"
}
