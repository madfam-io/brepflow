{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": false,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@brepflow/*": [
        "packages/*/src"
      ]
    },
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "build-occt",
    "third_party",
    "coverage",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "apps/marketing/**/*",
    "packages/nodes-core/src/nodes/generated/**/*"
  ],
  "include": [
    "apps",
    "packages",
    "scripts",
    "tests",
    "config",
    "build",
    "docs",
    "turbo.d.ts"
  ]
}
