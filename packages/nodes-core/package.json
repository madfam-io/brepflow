{
  "name": "@brepflow/nodes-core",
  "version": "0.1.0",
  "description": "BrepFlow core geometry nodes",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "generate": "tsx src/generator/generate.ts",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brepflow/engine-core": "workspace:*",
    "@brepflow/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}