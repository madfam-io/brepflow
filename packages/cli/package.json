{
  "name": "@brepflow/cli",
  "version": "0.1.0",
  "description": "BrepFlow CLI for headless rendering",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "brepflow": "./dist/index.js"
  },
  "scripts": {
