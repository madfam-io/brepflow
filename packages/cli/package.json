    "@brepflow/types": "workspace:*",
    "@brepflow/schemas": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.0.0",
    "vitest": "^1.2.0"
  }
}