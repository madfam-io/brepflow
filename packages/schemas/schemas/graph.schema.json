{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://brepflow.com/schemas/graph.schema.json",
  "title": "BrepFlow Graph",
  "description": "Schema for BrepFlow graph files (.bflow.json)",
  "type": "object",
  "required": ["version", "units", "tolerance", "nodes", "edges"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "units": {
      "type": "string",
      "description": "Model units",
      "enum": ["mm", "cm", "m", "in"]
    },
    "tolerance": {
      "type": "number",
      "description": "Model tolerance",
      "minimum": 0.00001,
      "maximum": 1
    },
    "nodes": {
      "type": "array",
      "description": "Graph nodes",
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "edges": {
      "type": "array",
      "description": "Graph edges",
      "items": {
        "$ref": "#/definitions/edge"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Graph metadata",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique node identifier"
        },
        "type": {
          "type": "string",
          "description": "Node type"
        },
        "label": {
          "type": "string",
          "description": "Display label"
        },
        "position": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          },
          "required": ["x", "y"]
        },
        "inputs": {
          "type": "object",
          "description": "Input connections"
        },
        "outputs": {
          "type": "object",
          "description": "Output values (computed)"
        },
        "params": {
          "type": "object",
          "description": "Node parameters"
        },
        "state": {
          "type": "object",
          "description": "Node state (UI, errors, etc.)"
        }
      }
    },
    "edge": {
      "type": "object",
      "required": ["id", "source", "sourceHandle", "target", "targetHandle"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique edge identifier"
        },
        "source": {
          "type": "string",
          "description": "Source node ID"
        },
        "sourceHandle": {
          "type": "string",
          "description": "Source socket ID"
        },
        "target": {
          "type": "string",
          "description": "Target node ID"
        },
        "targetHandle": {
          "type": "string",
          "description": "Target socket ID"
        }
      }
    },
    "vec3": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    }
  }
}