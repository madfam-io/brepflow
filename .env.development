# BrepFlow Development Environment Configuration

# Application Mode
NODE_ENV=development
BREPFLOW_MODE=development

# Geometry Engine Configuration
ENABLE_MOCK_GEOMETRY=true
REQUIRE_REAL_OCCT=false
OCCT_WASM_PATH=/assets/wasm
OCCT_INIT_TIMEOUT=60000
VALIDATE_GEOMETRY_OUTPUT=false

# Performance & Memory
MAX_WORKER_MEMORY_MB=4096
ENABLE_MEMORY_MONITORING=true
MESH_CACHE_SIZE_MB=1024
WORKER_RESTART_THRESHOLD_MB=3500

# Security
ENABLE_CSP=false
REQUIRE_CORS_VALIDATION=false
ALLOWED_ORIGINS=*

# Logging & Monitoring
LOG_LEVEL=debug
ENABLE_ERROR_REPORTING=false
SENTRY_DSN=
ENABLE_PERFORMANCE_MONITORING=false

# Feature Flags
ENABLE_EXPORT_VALIDATION=false
ENABLE_HEALTH_CHECKS=true
ENABLE_ADMIN_DASHBOARD=true

# Export Settings
MAX_EXPORT_SIZE_MB=500
SUPPORTED_FORMATS=step,iges,stl,obj,debug
REQUIRE_EXPORT_VALIDATION=false